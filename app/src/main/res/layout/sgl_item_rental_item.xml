<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ui_15_dp"
    android:layout_marginTop="@dimen/ui_10_dp"
    android:layout_marginEnd="@dimen/ui_15_dp"
    android:background="@drawable/round_square_white_background">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgItem"
        android:layout_width="@dimen/ui_80_dp"
        android:layout_height="@dimen/ui_80_dp"
        android:layout_marginStart="@dimen/ui_12_dp"
        android:layout_marginTop="@dimen/ui_12_dp"
        android:layout_marginBottom="@dimen/ui_12_dp"
        android:foreground="?attr/selectableItemBackground"
        android:src="@color/shimmerColor"
        app:riv_corner_radius="@dimen/ui_8_dp"
        android:scaleType="fitXY"/>

    <devx.app.licensee.common.custumViews.BoldTextView
        android:id="@+id/txtItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_10_dp"
        android:layout_marginTop="@dimen/ui_10_dp"
        tools:text="Trailer Name"
        android:textColor="@color/light_black"
        android:textSize="@dimen/text_13_sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgItem"
        android:layout_toLeftOf="@+id/txtCharges"/>


    <devx.app.licensee.common.custumViews.BoldTextView
        android:id="@+id/txtCharges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_12_dp"
        tools:text="2 Days"
        android:textColor="@color/rating_orange"
        android:textSize="@dimen/text_13_sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>



</RelativeLayout>