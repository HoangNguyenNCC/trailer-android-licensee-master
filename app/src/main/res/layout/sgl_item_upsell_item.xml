<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/ui_15_dp"
    android:layout_marginTop="@dimen/ui_10_dp"
    android:layout_marginEnd="@dimen/ui_15_dp"
    android:background="@drawable/round_square_white_background"
    android:foreground="?attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgUpsellItem"
            android:layout_width="@dimen/ui_80_dp"
            android:layout_height="@dimen/ui_80_dp"
            android:visibility="visible"
            app:riv_corner_radius="@dimen/ui_8_dp"
            android:layout_marginStart="@dimen/ui_12_dp"
            android:layout_marginTop="@dimen/ui_12_dp"
            android:layout_marginBottom="@dimen/ui_12_dp"
            android:src="@color/shimmerColor"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <devx.app.licensee.common.custumViews.BoldTextView
                    android:id="@+id/txtUpsellItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Luggage"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_12_sp"
                    android:paddingStart="@dimen/ui_10_dp"
                    android:paddingTop="@dimen/ui_10_dp"
                    android:paddingBottom="@dimen/ui_10_dp"/>
                <devx.app.licensee.common.custumViews.BoldTextView
                    android:id="@+id/txtUpsellItemAvailabilityStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Free"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/text_12_sp"
                    android:paddingStart="@dimen/ui_10_dp"
                    android:paddingTop="@dimen/ui_10_dp"
                    android:paddingBottom="@dimen/ui_10_dp"
                    android:paddingEnd="@dimen/ui_10_dp"
                    android:visibility="gone"/>
            </RelativeLayout>

            <devx.app.licensee.common.custumViews.BoldTextView
                android:id="@+id/mTxtAvailabilityStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_10_dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_9_sp"
                android:textStyle="bold"
                android:paddingLeft="@dimen/ui_5_dp"
                android:paddingBottom="@dimen/ui_2_dp"
                android:paddingRight="@dimen/ui_5_dp"
                android:visibility="gone"
                android:text="dssfagsfgsfg"
                android:background="@drawable/complete_green_round_corner_background"
                />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>