<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/ui_15_dp"
    android:layout_marginTop="@dimen/ui_10_dp"
    android:layout_marginEnd="@dimen/ui_15_dp"
    android:background="@drawable/round_square_white_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgItem"
            android:layout_width="@dimen/ui_80_dp"
            android:layout_height="@dimen/ui_80_dp"
            android:layout_margin="@dimen/ui_5_dp"
            android:src="@color/shimmerColor"
            android:layout_marginStart="@dimen/ui_12_dp"
            android:layout_marginTop="@dimen/ui_12_dp"
            android:layout_marginBottom="@dimen/ui_12_dp">
        </de.hdodenhof.circleimageview.CircleImageView>


        <devx.app.licensee.common.custumViews.BoldTextView
            android:id="@+id/txtItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_10_dp"
            android:layout_marginTop="@dimen/ui_10_dp"
            tools:text="Trailer Name"
            android:textColor="@color/light_black"
            android:textSize="@dimen/text_13_sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgItem"
            android:layout_toLeftOf="@+id/datLyt"/>
        <LinearLayout
            android:id="@+id/datLyt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/ui_5_dp">
            <devx.app.licensee.common.custumViews.BoldTextView
                android:id="@+id/txtRentalStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_13_sp"
                android:padding="@dimen/ui_3_dp"/>
            <devx.app.licensee.common.custumViews.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_13_sp"
                android:text="To"
                android:padding="@dimen/ui_3_dp"/>
            <devx.app.licensee.common.custumViews.BoldTextView
                android:id="@+id/txtRentalEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="@dimen/text_13_sp"
                android:padding="@dimen/ui_3_dp"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>