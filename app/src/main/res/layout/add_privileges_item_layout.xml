<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="@dimen/ui_30_dp"
    android:paddingTop="@dimen/ui_5_dp"
    android:paddingEnd="@dimen/ui_20_dp"
    android:paddingBottom="@dimen/ui_12_dp">

    <View
        android:id="@+id/selectionView"
        android:layout_width="@dimen/ui_20_dp"
        android:layout_height="@dimen/ui_20_dp"
        android:background="@drawable/all_square_rounded_greyy_background"
        app:layout_constraintEnd_toStartOf="@id/privilegeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/privilegeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_8_dp"
        android:foreground="?attr/selectableItemBackground"
        android:text="Privilege 1"
        android:textAllCaps="true"
        android:textColor="@color/dimGrey"
        android:textSize="@dimen/text_12_sp"
        app:layout_constraintBottom_toBottomOf="@id/selectionView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/selectionView"
        app:layout_constraintTop_toTopOf="@id/selectionView" />

</androidx.constraintlayout.widget.ConstraintLayout>