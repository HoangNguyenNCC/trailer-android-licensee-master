<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.signup.VerifyOTPActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verifyOtpLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <devx.app.licensee.common.custumViews.BoldTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:text="Verify OTP"
            android:textColor="@color/black"
            android:textSize="@dimen/text_20_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <devx.app.licensee.common.custumViews.BoldTextView
            android:id="@+id/txtHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trailer2You"
            android:textColor="@color/themeGrey"
            android:textSize="@dimen/text_11_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text" />
        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:bar_active_color="@android:color/black"
            app:bar_inactive_color="@color/dark_gray"
            app:otp_box_background="@color/light_grey"
            android:textColor="@color/dark_gray"
            app:height="40dp"
            app:width="40dp"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:length="4"
            app:otp_text_size="20dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtHeaderTitle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ui_20_dp"
            android:layout_marginTop="@dimen/ui_40_dp"
            android:layout_marginEnd="@dimen/ui_20_dp"
            android:gravity="center"
            android:weightSum="6"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtHeaderTitle">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/ui_35_dp"
                android:layout_marginEnd="@dimen/ui_5_dp"
                android:layout_weight="0.8"
                android:background="@drawable/all_square_rounded_greyy_background"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/text_13_sp"
                    tools:text="1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/ui_35_dp"
                android:layout_marginStart="@dimen/ui_5_dp"
                android:layout_marginEnd="@dimen/ui_5_dp"
                android:layout_weight="0.8"
                android:background="@drawable/all_square_rounded_greyy_background"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/text_13_sp"
                    tools:text="1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/ui_35_dp"
                android:layout_marginStart="@dimen/ui_5_dp"
                android:layout_marginEnd="@dimen/ui_5_dp"
                android:layout_weight="0.8"
                android:background="@drawable/all_square_rounded_greyy_background"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/text_13_sp"
                    tools:text="1" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/ui_35_dp"
                android:layout_marginStart="@dimen/ui_5_dp"
                android:layout_marginEnd="@dimen/ui_5_dp"
                android:layout_weight="0.8"
                android:background="@drawable/all_square_rounded_greyy_background"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="@dimen/text_13_sp"
                    tools:text="1" />

            </RelativeLayout>



        </LinearLayout>

        <devx.app.licensee.common.custumViews.BoldTextView
            android:id="@+id/verifyOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_40_dp"
            android:background="@drawable/complete_yellow_round_background"
            android:paddingStart="@dimen/ui_25_dp"
            android:paddingTop="@dimen/ui_8_dp"
            android:paddingEnd="@dimen/ui_25_dp"
            android:paddingBottom="@dimen/ui_8_dp"
            android:text="VERIFY OTP"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otp_view" />

        <devx.app.licensee.common.custumViews.BoldTextView
            android:id="@+id/resendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_20_dp"
            android:text="RESEND OTP"
            android:textColor="@color/themeDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/verifyOTP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/ui_90_dp"
            android:layout_height="@dimen/ui_90_dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/profile_verified_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <devx.app.licensee.common.custumViews.BoldTextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Success"
            android:textColor="@color/themeDark"
            android:textSize="@dimen/text_16_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/icon" />

        <devx.app.licensee.common.custumViews.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOUR NUMBER IS VERIFIED"
            android:textColor="@color/themeLight"
            android:textSize="@dimen/text_12_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>