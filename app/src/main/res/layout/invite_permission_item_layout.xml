<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ui_12_dp"
    android:background="@drawable/round_square_white_background"
    android:foreground="?attr/selectableItemBackground">

    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/permissionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_20_dp"
        android:layout_marginTop="@dimen/ui_12_dp"
        android:layout_marginBottom="@dimen/ui_12_dp"
        android:text="Permission 1"
        android:textSize="@dimen/text_14_sp"
        android:textColor="@color/light_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/cancelLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_10_dp"
        android:background="@drawable/all_square_rounded_dark_yellow_background"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/ui_8_dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <devx.app.licensee.common.custumViews.RegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11_sp" />

        <ImageView
            android:layout_width="@dimen/ui_15_dp"
            android:layout_height="@dimen/ui_15_dp"
            android:layout_marginStart="@dimen/ui_5_dp"
            app:srcCompat="@drawable/ic_close_white_24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>