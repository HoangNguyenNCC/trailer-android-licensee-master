<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ui_15_dp"
    android:layout_marginEnd="@dimen/ui_20_dp"
    android:background="@drawable/round_square_white_background"
    android:elevation="@dimen/ui_1_dp">

    <ImageView
        android:id="@+id/trailerImage"
        android:layout_width="@dimen/ui_50_dp"
        android:layout_height="@dimen/ui_40_dp"
        android:layout_marginStart="@dimen/ui_12_dp"
        android:layout_marginTop="@dimen/ui_12_dp"
        android:layout_marginBottom="@dimen/ui_12_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <devx.app.licensee.common.custumViews.BoldTextView
        android:id="@+id/trailerTitle"
        android:layout_width="@dimen/ui_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_12_dp"
        android:layout_marginEnd="@dimen/ui_20_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Trailer Cage"
        android:textSize="@dimen/text_13_sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/trailerImage"
        app:layout_constraintTop_toTopOf="@id/trailerImage" />

    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/trailerPrice"
        android:layout_width="@dimen/ui_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_20_dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="By Lorem Ipsum"
        android:textSize="@dimen/text_11_sp"
        app:layout_constraintBottom_toBottomOf="@id/trailerImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/trailerTitle"
        app:layout_constraintTop_toBottomOf="@id/trailerTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>