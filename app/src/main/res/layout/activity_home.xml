<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <devx.app.licensee.common.custumViews.NonSwipeableViewPager
        android:id="@+id/homeViewPager"
        android:layout_width="@dimen/ui_0_dp"
        android:layout_height="@dimen/ui_0_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNewTrailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_20_dp"
        android:scaleType="center"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_50_dp"
        android:background="@color/white"
        android:elevation="@dimen/ui_5_dp"
        android:weightSum="6"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/homeRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/homeIV"
                android:layout_width="@dimen/ui_24_dp"
                android:layout_height="@dimen/ui_27_dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/home_yellow" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/requestIV"
                android:layout_width="@dimen/ui_24_dp"
                android:layout_height="@dimen/ui_27_dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/grey_notification_icon" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/ui_0_dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2" />

        <RelativeLayout
            android:id="@+id/notificationRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/notificationIV"
                android:layout_width="@dimen/ui_24_dp"
                android:layout_height="@dimen/ui_27_dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/reminder_grey" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/accountRL"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/accountIV"
                android:layout_width="@dimen/ui_24_dp"
                android:layout_height="@dimen/ui_27_dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/grey_account_icon" />

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>