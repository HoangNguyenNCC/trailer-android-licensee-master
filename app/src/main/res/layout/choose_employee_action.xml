<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_large_top_corner_white">

    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="6dp"
        android:text="Employee"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="@dimen/ui_14_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Choose Option"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="@dimen/ui_14_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />
    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/empDetailsBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/all_rounded_grey_background_stroke"
        android:padding="6dp"
        android:text="Employee Details"
        android:textAlignment="center"
        android:textColor="@color/themeIphoneBlue"
        android:textStyle="bold"
        android:textSize="@dimen/ui_16_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />


    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/editACLBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/all_rounded_grey_background_stroke"
        android:padding="6dp"
        android:text="Edit ACL"
        android:textAlignment="center"
        android:textColor="@color/themeIphoneBlue"
        android:textStyle="bold"
        android:textSize="@dimen/ui_16_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/empDetailsBtn" />

    <devx.app.licensee.common.custumViews.RegularTextView
        android:id="@+id/addCancelBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/all_rounded_grey_background_stroke"
        android:padding="4dp"
        android:text="Cancel"
        android:textSize="@dimen/ui_16_dp"
        android:textAlignment="center"
        android:textColor="@color/themeIphoneBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editACLBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>